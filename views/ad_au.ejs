				<th width='47%'>บทสัมภาษณ์</th>
				<th width='1%'>จัดการ</th>
			</tr>
			<% authors.forEach(function(author,index){%>
			<tr>
				<td><%= index+1%></td>
				<td><%= author.a_penname%></td>
				<td><img src="<%= author.a_pic%>"></td>
				<td><%= author.a_name%></td>
				<td><%= author.a_phone%></td>
				<td><%= author.a_email%></td>
				<td><%= author.a_interview%></td>
				<td>
					<form action="/admin/au/<%= author._id%>?_method=DELETE" method="POST"><button class='btn btn-link'>ลบ</button></form><br>
					<a href="/admin/au/<%= author._id%>">แก้ไข</a>	
				</td>
			</tr>
			<% }); %>
